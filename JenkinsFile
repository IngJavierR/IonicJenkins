pipeline {
   agent any
   environment {
      PATH='/usr/local/bin:/usr/bin:/bin'
   }
   stages {
      stage('NPM install') {
         steps {
            sh 'npm install'
         }
      }
      stage('Android Build') {
         steps {
            sh 'cordova telemetry on'
            sh 'ANDROID_HOME=/var/lib/jenkins/android-sdk'
            sh 'export PATH=$ANDROID_HOME/platform-tools:$PATH'
            sh 'export PATH=$ANDROID_HOME/tools:$PATH'
            // sh 'ionic cordova build android'
            echo '$ANDROID_HOME'
         }
      }
   }
}
