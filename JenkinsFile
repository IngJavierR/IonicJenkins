pipeline {
   agent any
   environment {
      PATH='/usr/local/bin:/usr/bin:/bin'
   }
   stages {
      stage('NPM install') {
         steps {
            sh 'npm install'
         }
      }
      stage('Add platform android') {
         steps {
            sh 'ionic cordova platform add android@7.1.0'
         }
      }
      stage('Build app android') {
         steps {
            sh 'ionic cordova build android'
         }
      }
   }
}
