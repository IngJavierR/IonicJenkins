pipeline {
   agent any
   environment {
      PATH='/usr/local/bin:/usr/bin:/bin'
   }
   stages {
      stage('NPM Install') {
         steps {
            sh 'npm install'
         }
      }
      stage('Add Enviroment Android') {
         steps {
            sh 'ANDROID_HOME=/var/lib/jenkins/android-sdk'
            sh 'export PATH=$PATH:$ANDROID_HOME/bin'
         }
      }
      stage('Build Android') {
         steps {
            sh 'cordova telemetry on'
            sh 'ionic cordova build android'
         }
      }
   }
}
