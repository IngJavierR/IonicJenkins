pipeline {
   agent any
   environment {
      PATH='/usr/local/bin:/usr/bin:/bin'
   }
   stages {
      stage('NPM install') {
      steps {
         sh 'npm install'
      }
   }
   stages {
      stage('Add platform android') {
      steps {
         sh 'ionic cordova platform add android@7.1.0'
      }
   }
 }
}
